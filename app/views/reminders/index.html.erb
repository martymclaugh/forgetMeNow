<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<button class="btn btn-primary center dropdown-toggle" data-toggle="dropdown">New Text Reminder</button>
						<div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px; top:60%;">

              <div class="container">
                      <div class="row centered-form">
                      <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                      	<div class="panel panel-default">
                      		<div class="panel-heading">
              			    		<h3 class="panel-title text-center">Login</h3>
              			 			</div>
              			 			<div class="panel-body">
                              <%= form_for @reminder, url: {action: "create"} do |f| %>
                              <div class="field">
                                <%= f.label :email %><br />
                                <%= f.email_field :email, autofocus: true, class: 'form-control input-sm' %>
                              </div><br />
              			    					<div class="form-group">
                                    <div class="field">
                                      <%= f.label :password %>
                                      <%= f.password_field :password, autocomplete: "off", class: 'form-control input-sm' %>
                                    </div>
              			    			</div>
                              <% if devise_mapping.rememberable? -%>
                                <div class="field">
                                  <%= f.check_box :remember_me %>
                                  <%= f.label :remember_me %>
                                </div>
                              <% end -%>
                              <div class="actions">
                                <%= f.submit "Log in", class: 'btn btn-info btn-block'  %><br />
                              </div>
                            <% end %>
                            <%= render "devise/shared/links" %>
              			    	</div>
              	    		</div>
                  		</div>
                  	</div>
                  </div>
						</div>
<%= calendar do |date| %>
  <%= date.day %>
<% end %>
